{
    "project_name_short": "dad",
    "enforce_version_control": true,
    "clean_manifest": false,
    "default_actions": [
        "copy"
    ],
    "release_directory": "./releases",
    "source": {
        "directory": "./src/chrome",
        "platform": "chrome"
    },
    "targets": [
        {
            "directory": "./src/firefox",
            "platform": "firefox",
            "manifest_version": 2,
            "patch": [
                "popup.js",
                "word.js"
            ]
        },
        {
            "directory": "./src/opera",
            "platform": "opera",
            "manifest_version": 2,
            "patch": [
                "popup.js",
                "word.js"
            ],
            "temp": false
        }
    ],
    "git_messages": {
        "directory_sync": "automated directory sync",
        "packages": "automated package build"
    },
    "debug": true,
    "scripts_directory": "build_scripts\\"
}